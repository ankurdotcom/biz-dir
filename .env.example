# BizDir Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Environment
APP_ENV=production
DOMAIN_NAME=yourdomain.com

# WordPress Configuration
WP_URL=http://localhost
WP_TITLE=Business Directory
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=CHANGE_THIS_SECURE_PASSWORD!
WP_ADMIN_EMAIL=admin@yourdomain.com
WP_DEBUG=false

# WordPress Plugins (space-separated list)
WP_PLUGINS=redis-cache wp-super-cache contact-form-7

# WordPress Theme
WP_THEME=biz-dir

# Database Configuration
DB_HOST=db
DB_PORT=3306
DB_NAME=bizdir_production
DB_USER=bizdir_user
DB_PASSWORD=CHANGE_THIS_DB_PASSWORD!
DB_PREFIX=wp_
DB_ROOT_PASSWORD=CHANGE_THIS_ROOT_PASSWORD!

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD!

# Web Server Configuration
HTTP_PORT=80
HTTPS_PORT=443
NGINX_HOST=localhost

# SSL Configuration (for production)
SSL_EMAIL=admin@yourdomain.com
SSL_DOMAIN=yourdomain.com
SSL_ENABLED=true

# Optional Services
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_PASSWORD=CHANGE_THIS_ELASTIC_PASSWORD!
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD!

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_ACCESS_KEY=YOUR_S3_ACCESS_KEY
BACKUP_S3_SECRET_KEY=YOUR_S3_SECRET_KEY
BACKUP_S3_REGION=us-east-1

# Security Settings
JWT_SECRET=GENERATE_SECURE_JWT_SECRET_HERE
API_KEY=GENERATE_SECURE_API_KEY_HERE
ENCRYPTION_KEY=GENERATE_32_CHAR_ENCRYPTION_KEY
DISABLE_WP_CRON=true
WP_DISALLOW_FILE_EDIT=true
WP_DISALLOW_FILE_MODS=true
WP_AUTO_UPDATE_CORE=minor

# Payment Gateway Configuration (Production Only)
RAZORPAY_KEY_ID=rzp_live_XXXXXXXXXX
RAZORPAY_KEY_SECRET=YOUR_RAZORPAY_SECRET
PAYU_MERCHANT_KEY=YOUR_PAYU_MERCHANT_KEY
PAYU_MERCHANT_SALT=YOUR_PAYU_SALT
STRIPE_PUBLISHABLE_KEY=pk_live_XXXXXXXXXX
STRIPE_SECRET_KEY=sk_live_XXXXXXXXXX

# Email Configuration
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USERNAME=noreply@yourdomain.com
SMTP_PASSWORD=YOUR_SMTP_PASSWORD
SMTP_ENCRYPTION=tls

# Performance Settings
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=64M
PHP_POST_MAX_SIZE=64M

# Monitoring & Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY

# Development Settings
COMPOSE_PROJECT_NAME=bizdir
COMPOSE_FILE=docker-compose.yml
DEBUG=false
LOG_LEVEL=error
ENABLE_DEBUG_LOG=false
